<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gelen Kutusu</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(135deg, #f3f4f6, #e5e7eb);
            margin: 0;
            padding: 0;
        }

        .container {
            margin: 20px auto;
            max-width: 1200px;
            background-color: #fff;
            border-radius: 12px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        h1 {
            font-size: 28px;
            font-weight: bold;
            text-align: center;
            margin-bottom: 20px;
            color: #333;
        }

        .table {
            width: 100%;
            margin-top: 20px;
        }

            .table th {
                background-color: #007bff;
                color: white;
                text-align: center;
                padding: 12px 15px;
                border: 1px solid #ddd;
            }

            .table td {
                text-align: center;
                padding: 12px 15px;
                border: 1px solid #ddd;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
                max-width: 150px;
            }

                .table td a {
                    color: #007bff;
                    text-decoration: none;
                }

                    .table td a:hover {
                        text-decoration: underline;
                    }

        .modal-header {
            background-color: #007bff;
            color: white;
        }

        .modal-body {
            font-size: 16px;
            color: #333;
            white-space: pre-wrap; /* Uzun mesajlarda düzgün görünsün */
            max-height: 70vh; /* Modal içeriği ekranı aşmasın */
            overflow-y: auto; /* Kaydırma çubuğu */
        }

            .modal-body::-webkit-scrollbar {
                width: 8px;
            }

            .modal-body::-webkit-scrollbar-thumb {
                background: #007bff;
                border-radius: 4px;
            }

            .modal-body::-webkit-scrollbar-track {
                background: #f1f1f1;
            }

        .send-message-btn {
            margin-top: 20px;
            text-align: center;
        }

    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Gelen Kutusu</a>
        </div>
    </nav>

    <!-- İçerik -->
    <div class="container">
        <h1>Gelen Kutusu</h1>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Gönderen Idsi</th>
                        <th>Gönderen</th>
                        <th>Alıcı</th>
                        <th>Mesaj</th>
                        <th>Tarih</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var message in Model.ReceivedMessages)
                    {
                        <tr>
                            <td>@(message.SenderId.ToString() ?? "Bilinmiyor")</td>
                            <td>@(message.SenderUserName ?? "Bilinmiyor")</td>
                            <td>@(message.ReceiverUserName ?? "Bilinmiyor")</td>
                            <td>
                                <a href="#" onclick="showMessageModal('@System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(message.Content)')">
                                    @(message.Content.Length > 30 ? message.Content.Substring(0, 30) + "..." : message.Content)
                                </a>
                            </td>
                            <td>@message.SentDate.ToString("g")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Mesaj Gönder Butonu -->
        <div class="send-message-btn">
            <a href="@Url.Action("SendMessageToUser", "Message")" class="btn btn-primary">Mesaj Gönder</a>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="messageModal" tabindex="-1" aria-labelledby="messageModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="messageModalLabel">Mesaj Detayı</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p id="modalMessageContent">Yükleniyor...</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Modalda mesaj detayını göstermek için
        function showMessageModal(content) {
            document.getElementById('modalMessageContent').innerHTML = content; // Tam mesaj içeriğini göster
            var messageModal = new bootstrap.Modal(document.getElementById('messageModal'));
            messageModal.show();
        }
    </script>
</body>
</html>
