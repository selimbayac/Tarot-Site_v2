@model SendMessageViewModel

@{
    ViewData["Title"] = "Mesaj Gönder";
}

<div class="message-container">
    <h3>Fal baktırmak ya da soru sormak istediğiniz kişiyi seçin. Yanıtlar mesaj kutunuza düşecektir. Herhangi bir sorunla karşılaşırsanız lütfen destek ekibiyle iletişime geçin.</h3>

    <form asp-action="Send" class="message-form">
        <div class="form-group">
            <label asp-for="ReceiverId" class="form-label">Falcı Seçin</label>
            <select asp-for="ReceiverId" asp-items="@(new SelectList(Model.Falcilar, "Id", "UserName"))" class="form-control"></select>
        </div>

        <div class="form-group">
            <label asp-for="Content" class="form-label">Sormak İstediğiniz Soruyu Yazın</label>
            <textarea asp-for="Content" class="form-control message-textarea" placeholder="Mesajınızı buraya yazın..."></textarea>
        </div>

        <div class="form-group text-center">
            <input type="submit" value="Gönder" class="btn btn-primary btn-send" />
        </div>
    </form>
</div>

<style>
    /* Genel Form Tasarımı */
    .message-container {
        max-width: 600px;
        margin: 30px auto;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
        font-family: Arial, sans-serif;
    }

    h3 {
        text-align: center;
        margin-bottom: 20px;
        color: #333;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-label {
        font-weight: bold;
        display: block;
        margin-bottom: 5px;
        color: #555;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 16px;
    }

    .message-textarea {
        resize: vertical;
        height: 120px;
    }

    .btn-send {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 10px 20px;
        font-size: 18px;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .btn-send:hover {
        background-color: #0056b3;
    }

    
    }
</style>
